{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
